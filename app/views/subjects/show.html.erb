<div class="jumbotron subjects show">
  <% if !flash[:notice].blank?%>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice]%>
    </div>
  <% end %>
  <%= link_to("<< Back to List", subjects_path, :class => 'back-link btn btn-primary') %>

  <h2>Show subjects</h2>

  <table class="table" summary="Subject detail view">
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible ?</th>
      <td><%= @subject.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td>
        <%= @subject.created_at.to_formatted_s(:long) %>
      </td>
    </tr>
    <tr>
      <th>Updated</th>
      <td>
        <%= @subject.updated_at.to_formatted_s(:long) %>
      </td>
    </tr>
  </table>
</div>
