<div class="jumbotron subjects delete">
<%= link_to("<< Back to List", subjects_path, :class => 'back-link btn btn-primary') %>

  <h2>Delete Subject</h2>

  <%= form_for(@subject, :method => 'delete') do |f| %>

    <p>Are you sure you want to delete this subject?</p>
    <p class="reference-name"><%= f.object.name%></p>

    <div class="form-buttons">
      <%= f.submit('Delete Subject', :class => 'btn btn-primary')%>
    </div>

  <% end %>
</div>
