<div class="jumbotron pages show">
  <% if !flash[:notice].blank?%>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice]%>
    </div>
  <% end %>
  <%= link_to("<< Back to List", pages_path, :class => 'back-link btn btn-primary') %>

  <h2>Show pages</h2>

  <table class="table" summary="page detail view">
    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Subject</th>
      <td><%= link_to(@subject.name, subject_path(@subject)) %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Visible ?</th>
      <td><%= @page.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td>
        <%= @page.created_at.to_formatted_s(:long) %>
      </td>
    </tr>
    <tr>
      <th>Updated</th>
      <td>
        <%= @page.updated_at.to_formatted_s(:long) %>
      </td>
    </tr>
  </table>
</div>
