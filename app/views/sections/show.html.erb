<div class="jumbotron sections show">
  <% if !flash[:notice].blank?%>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice]%>
    </div>
  <% end %>
  <%= link_to("<< Back to List", sections_path, :class => 'back-link btn btn-primary') %>

  <h2>Show Sections</h2>

  <table class="table" summary="section detail view">
    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Page</th>
      <td><%= link_to(@page.name, page_path(@page)) %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Content Type</th>
      <td><%= @section.content_type %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @section.content %></td>
    </tr>
    <tr>
      <th>Visible ?</th>
      <td><%= @section.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td>
        <%= @section.created_at.to_formatted_s(:long) %>
      </td>
    </tr>
    <tr>
      <th>Updated</th>
      <td>
        <%= @section.updated_at.to_formatted_s(:long) %>
      </td>
    </tr>
  </table>
</div>
